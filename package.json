{
  "name": "@fullstory/segment-react-native-plugin-fullstory",
  "version": "1.0.0",
  "description": "Integrate FullStory with your Segment analytics in your React-Native app.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "prepack": "bob build",
    "typescript": "tsc --noEmit",
    "clean": "rimraf lib node_modules"
  },
  "keywords": [
    "fullstory",
    "react-native",
    "segment",
    "ios",
    "android"
  ],
  "repository": "https://github.com/fullstorydev/segment-react-native-plugin-fullstory.git",
  "author": "FullStory <ryanwang@fullstory.com> (https://github.com/fullstorydev/segment-react-native-plugin-fullstory.git)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullstorydev/segment-react-native-plugin-fullstory.git/issues"
  },
  "homepage": "https://github.com/fullstorydev/segment-react-native-plugin-fullstory.git#readme",
  "peerDependencies": {
    "@segment/analytics-react-native": "*"
  },
  "dependencies": {
    "@fullstory/react-native": "^1.1.1",
    "lodash.isplainobject": "^4.0.6"
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/lodash.isplainobject": "^4.0.7",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "react-native-builder-bob": "^0.20.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.5.2"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json",
        "diagnostics": false
      }
    },
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/*",
      "<rootDir>/lib/"
    ],
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ]
  }
}
